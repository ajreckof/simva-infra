{
    "Version":"2012-10-17",
    "Statement":[
       {
          "Sid":"AllowGroupToSeeBucketListInTheConsole",
          "Effect":"Allow",
          "Action":[
             "s3:GetBucketLocation",
             "s3:ListAllMyBuckets"
          ],
          "Resource":[
             "arn:aws:s3:::*"
          ]
       },
       {
          "Sid":"AllowRootAndSinkListingInBucket",
          "Effect":"Allow",
          "Action":[
             "s3:ListBucket"
          ],
          "Resource":[
             "arn:aws:s3:::traces"
          ],
          "Condition":{
             "StringEquals":{
                "s3:prefix":[
                   "",
                   "kafka-topics/",
                   "kafka-topics/*"
                ]
             }
          }
       },
       {
          "Sid":"AllowAllS3ActionsInSinkFolder",
          "Effect":"Allow",
          "Action":[
             "s3:*"
          ],
          "Resource":[
             "arn:aws:s3:::traces/kafka-topics/*"
          ]
       }
    ]
 }