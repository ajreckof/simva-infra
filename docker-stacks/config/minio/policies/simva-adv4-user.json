{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AllowListAccessToSpecificStudyFolders",
            "Effect": "Allow",
            "Action": "s3:ListBucket",
            "Resource": "arn:aws:s3:::traces",
            "Condition": {
                "StringLike": {
                    "s3:prefix": "kafka-topics/traces/_id=*/"
                }
            }
        },
        {
            "Sid": "AllowReadAccessToSpecificStudyFolders",
            "Effect": "Allow",
            "Action": "s3:GetObject",
            "Resource": "arn:aws:s3:::traces/kafka-topics/traces/_id=*/*"
        }
    ]
}
